{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=17280000"
          }
        ]
      }, 
      {
        "source": "**/*@(css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=17280000"
          }
        ]
      },
      {
        "source": "**/*@(html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, no-cache"
          }
        ]
      }
    ]
  }
}
